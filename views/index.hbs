<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <style>
        .header {
            position: sticky;
            top:0;
            background-color: white;
        }
    </style>
  </head>
  <body>
      <div class="container mb-3">

        <form action="../upload/file" method="get" class="form-text">
          <div class="mb-3">
            <label for="name" class="col-form-label">Name</label>
            <input name="name" id="name" class="form-control">

            <label for="vorname" class="col-form-label">Vorname</label>
            <input name="vorname" id="vorname" class="form-control">
            
            <label for="abteilung" class="col-form-label">Abteilung</label>
            <input name="abteilung" id="abteilung" class="form-control">
          </div>
          <button type="submit" class="btn btn-primary">Enter</button>
        </form>

      </div>

      <div class="container">
        <table class = "table table-hover">
          <tr class="header"> 
            <th>Name</th>
            <th>Vorname</th>
            <th>Mitarbeiternr</th>
            <th>Ausbildung/Studium</th>
            <th>Jahrgang</th>
            <th>Abteilung</th>
            <th>Von</th>
            <th>Bis</th>
          </tr>
          {{#each students}}              
          {{#each department}}
          <tr>       
              <td>{{../name}}</td>
              <td>{{../prename}}</td>
              <td>{{../id}}</td>
              <td>{{../subject}}</td>
              <td>{{../year}}</td>       
              <td>{{abbreviation}}</td>
              <td>{{startingdate}}</td>
              <td>{{endingdate}}</td>
          </tr>
          {{/each}}
          {{/each}}
        </table>
      </div>
    
  </body>
</html>